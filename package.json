{
  "name": "echo-music-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "dev": "nodemon",
    "build": "swc src --out-dir dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@koa/router": "^12.0.0",
    "NeteaseCloudMusicApi": "^4.8.2",
    "axios": "^1.1.2",
    "koa": "^2.13.4",
    "koa-body": "^6.0.1",
    "koa-logger": "^3.2.1",
    "md5": "^2.3.0",
    "moment": "^2.29.4",
    "redis": "^4.5.1",
    "simplify-chinese": "^1.2.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.11",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.1.2",
    "@types/koa": "^2.13.5",
    "@types/koa-logger": "^3.1.2",
    "@types/koa__router": "^12.0.0",
    "@types/md5": "^2.3.2",
    "@types/node": "^18.8.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "chokidar": "^3.5.3",
    "eslint": "^8.0.1",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^29.2.2",
    "supertest": "^6.3.0",
    "typescript": "*"
  },
  "imports": {
    "@/*": [
      "src/*",
      "dist/*"
    ]
  },
  "type": "module",
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "swc src --out-dir dist && node --experimental-specifier-resolution=node dist/index.js",
    "ext": "ts, js"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageProvider": "v8",
    "testMatch": [
      "**/test/index.[jt]s"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@src$": "<rootDir>/src"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "@swc/jest"
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  }
}
